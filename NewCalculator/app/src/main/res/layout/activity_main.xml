<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        style="@style/btnrow">

        <Button
            style="@style/btn"
            android:text="AC"
            android:id="@+id/ac"
            android:textColor="@color/red"
            />

        <Button
            style="@style/btn"
            android:text="Back"
            android:id="@+id/bk"
            android:textColor="@color/red"/>

        <Button
            style="@style/btn" />

        <Button
            style="@style/btn"
            android:text="/"
            android:id="@+id/div"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        style="@style/btnrow">

        <Button
            style="@style/btn"
            android:text="7"
            android:id="@+id/sev"
            />

        <Button
            style="@style/btn"
            android:id="@+id/eit"
            android:text="8"/>

        <Button
            android:id="@+id/nin"
            style="@style/btn"
            android:text="9"/>

        <Button
            android:id="@+id/mul"
            style="@style/btn"
            android:text="Ã—"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        style="@style/btnrow">

        <Button
            style="@style/btn"
            android:id="@+id/fur"
            android:text="4"
            />

        <Button
            style="@style/btn"
            android:id="@+id/fiv"
            android:text="5"/>

        <Button
            style="@style/btn"
            android:id="@+id/six"
            android:text="6"/>

        <Button
            style="@style/btn"
            android:text="-"
            android:id="@+id/min"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        style="@style/btnrow">

        <Button
            style="@style/btn"
            android:id="@+id/one"
            android:text="1"
            />

        <Button
            style="@style/btn"
            android:id="@+id/two"
            android:text="2"/>

        <Button
            style="@style/btn"
            android:id="@+id/thr"
            android:text="3"/>

        <Button
            style="@style/btn"
            android:id="@+id/pls"
            android:text="+"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        style="@style/btnrow">

        <Button
            style="@style/btn"
            android:text="."
            android:id="@+id/dot"
            />

        <Button
            style="@style/btn"
            android:id="@+id/zro"
            android:text="0"/>

        <Button
            style="@style/btn"
            android:id="@+id/eqs"
            android:text="="
            android:background="@color/orange"
            android:layout_weight="2"/>
    </LinearLayout>

</LinearLayout>